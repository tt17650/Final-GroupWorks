@using myTaiwanTest.Models
@model AddfriendPlusText
@{
    ViewBag.Title = "FriendPage";
    Layout = "~/Views/layout/_FriendLayout.cshtml";
}

<div class="dynamicTable">
    <ul class="dynamicBar">
        @if (Model != null)
        {
            foreach (var dr in Model.browseText)
            {
                <li class="dynamicTextSpace" onclick="singleText(@dr.txtID)">
                    <div class="dynamicBarView">
                        <div class="dynamicBarViewValue">
                            @if (dr.picUrl != "" && dr.picUrl != null)
                            {
                                <img src="@dr.picUrl" class="dynamicBarViewValueImage" />
                            }
                            else
                            {
                                <img src="~/image/SignInPic1.jpg" class="dynamicBarViewValueImage" />
                            }
                        </div>
                    </div>
                    <div class="dynamicBarText">
                        <div class="dynamicBarTextValue">
                            <label style="font-size:larger">@dr.name</label><br />
                            <label style="font-size:large;float:left">@dr.countryName</label>
                            <label style="font-size:large;float:right">@dr.txtUpdateTime</label><br />
                            <div style="word-break: break-all">@Html.Raw(dr.txtText)</div>
                        </div>
                    </div>
                </li>
            }
        }
        else
        {
            <li class="dynamicTextSpace">

            </li>
        }

    </ul>
</div>

<script>
    function singleText(txtID) {
        window.location.href = "/signs/singleText/" + txtID;

    }
</script>

