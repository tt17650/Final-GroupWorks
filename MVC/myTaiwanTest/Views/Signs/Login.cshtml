<body>

    <div class="login-wrap">
        <div class="login-html">
            <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Sign In</label>
            <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Sign Up</label>
            <div class="login-form">
                @using (Html.BeginForm("LogIn", "Signs"))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="sign-in-htm">
                        <div class="group">
                            <label for="user" class="label" onclick="speedLogIn()">Username</label>
                            <input id="user" name="name" type="text" class="input">
                        </div>
                        <div class="group">
                            <label for="pass" class="label">Password</label>
                            <input id="pass" type="password" name="passwords" class="input" data-type="password">
                        </div>
                        <div class="group">
                            <input id="check" type="checkbox" class="check" checked>
                            <label for="check"><span class="icon"></span> Keep me Signed in</label>
                        </div>
                        <div class="group">
                            <input type="submit" class="button" value="Sign In">
                        </div>
                        <div class="hr"></div>
                        <div class="foot-lnk">
                            <a href="#forgot">Forgot Password?</a>
                        </div>
                    </div>
                }
                @using (Html.BeginForm("SignIn", "Signs"))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="sign-up-htm">
                        <div class="group">
                            <label for="user" class="label" onclick="speedSignIn()">Username</label>
                            <input id="user1" name="name" type="text" class="input">
                        </div>
                        <div class="group">
                            <label for="pass" class="label">Password</label>
                            <input id="pass1" type="password" name="passwords" class="input" data-type="password">
                        </div>
                        <div class="group">
                            <label for="passcheck" class="label">Repeat Password</label>
                            <input id="passcheck" type="password" class="input" data-type="password">
                        </div>
                        <div class="group">
                            <label for="email" class="label">Email Address</label>
                            <input id="email1" name="email" type="text" class="input">
                        </div>
                        <div class="group">
                            <input type="submit" class="button" value="Sign Up">
                        </div>
                        <div class="hr"></div>
                        <div class="foot-lnk">
                            <label for="tab-1">Already Member?</label>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <script>
        function speedSignIn() {
            $("#user1").val("345");
            $("#pass1").val("345");
            $("#passcheck").val("345");
            $("#email1").val("345@345");
        }

        function speedLogIn() {
            $("#user").val("Milktea123");
            $("#pass").val("MilkteaPass");
        }
    </script>


</body>
</html>
